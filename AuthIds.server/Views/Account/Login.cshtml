@using AuthIds.server.Models
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
<div class="login-page">
    <div class="page-header">
        <h1>Login</h1>
    </div>
    <partial name="_ValidationSummary" />
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Login</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Login"></label>
                                <input class="form-control credential" placeholder="Saisissez votre identifiant" asp-for="Login" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control credential" placeholder="Saisissez votre mot de passe" asp-for="Password" autocomplete="off">

                                <div id="forgot-pwd">
                                    <a asp-action="ForgotPassword"
                                       asp-controller="Account"
                                       asp-route-returnUrl="@Model.ReturnUrl"
                                       class="pull-right reset-password">Mot de passe oublié ?</a>
                                </div>
                            </div>
                            <div class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <span id="remember-pwd">Mémoriser mon mot de passe</span>
                                </label>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="Login">Login</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>